{
  "name": "involution-engine",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:spice\" \"next dev\"",
    "dev:spice": "cd services/spice && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "next build",
    "start": "next start",
    "kernels": "bash services/spice/download_kernels.sh",
    "test": "vitest run",
    "test:ui": "vitest run",
    "test:e2e": "playwright test",
    "test:backend": "./scripts/run_backend_tests.sh",
    "test:all": "./scripts/run_all_tests.sh"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.2",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  }
}
