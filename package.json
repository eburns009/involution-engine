{
  "name": "involution-engine",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:spice\" \"npm run dev:api\" \"npm run dev:web\"",
    "dev:spice": "cd services/spice && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/api && npm run build --workspace=apps/web",
    "test": "npm run test --workspaces",
    "kernels": "bash services/spice/download_kernels.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}